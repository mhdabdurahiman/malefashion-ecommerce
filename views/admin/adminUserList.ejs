<div id="user-table" class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Status</th>
                    <th>Registered</th>
                    <th class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- looping starts -->

                <% for( let user of userList ) { %>
                    <tr>
                        <td width="40%">
                            <a href="#" class="itemside">
                                <div class="info pl-3">
                                    <h6 class="mb-0 title"><%= user.fullname %></h6>
                                </div>
                            </a>
                        </td>
                        <td><%= user.email %></td>
                        <td><%= user.mobile %></td>
                        <td>
                        <% if (user.is_blocked === false) { %>
                            <span style="width: 50px;" class="badge rounded-pill alert-success active-status">Active</span>
                        <% } else { %>
                            <span style="width: 50px;" class="badge rounded-pill alert-danger active-status">Inactive</span>
                        <% } %>
                        </td>
                        <td><%= user.createdDate.toDateString() %></td>8
                        <td>
                            <div id="button-container-<%= user._id %>">
                                <% if (user.is_blocked === false) { %>
                                        <button style="width:80px;" class="btn btn-sm btn-danger rounded font-sm mt-15 block-unblock-btn" data-user-id="<%= user._id %>" data-is-blocked="<%= user.is_blocked %>">Block</button>
                                <% } else { %>
                                        <button style="width:80px;" class="btn btn-sm btn-success rounded font-sm mt-15 block-unblock-btn" data-user-id="<%= user._id %>" data-is-blocked="<%= user.is_blocked %>">Unblock</button>
                                <% } %>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <!-- table-responsive.// -->
    </div>
</div>
<!-- card-body end// -->
</div>
