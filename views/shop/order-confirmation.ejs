<%- include("../partials/userPartials/header") -%>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Order Confirmation</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <a href="/shop">Shop</a>
                            <span>Check Out</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Order Confirmation Begin -->

    <section class="confirmation_part spad">
        <div class="container">
            <div class="row py-5" style="background: #d0d0d0;">
                <div class="col-lg-12" style="background: #d0d0d0;">
                    <a class="btn site-btn" href="/shop">Continue Shopping</a>
    
                    <div class="confirmation_title">
                        <span style="color: green;">Thank you. Your order has been received.</span>
                    </div>
                </div>
                <div class="col-lg-6 col-lx-4" style="background: #d0d0d0;">
                    <div class="single_confirmation_details">
                        <h4>Order Info</h4>
                        <ul>
                            <li>
                                <p>Order Id</p><span>: <%= orderData.orderId %></span>
                            </li>
                            <li>
                                <p>Date</p><span>:  <%=new Date (orderData.createdAt).toLocaleDateString('en-US', { weekday: 'long'
                                    , month: 'long' , day: 'numeric' , year: 'numeric' , hour: '2-digit' ,
                                    minute: '2-digit' , hour12: true })%></span>
                            </li>
                            <li>
                                <p>Payment Method</p><span>: <%= orderData.paymentOption %></span>
                            </li>
                        </ul>
                    </div>
                </div>
    
                <div class="col-lg-6 col-lx-4" style="background: #d0d0d0;">
                    <div class="single_confirmation_details">
                        <h4>Shipping Address</h4>
                        <ul>
                            <li>
                                <p>Street</p><span>: </span>
                            </li>
                            <li>
                                <p>City</p><span>: Los Angeles</span>
                            </li>
                            <li>
                                <p>Country</p><span>: United States</span>
                            </li>
                            <li>
                                <p>Postcode</p><span>: 36952</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row py-5 ">
                <div class="col-lg-12" style="background: #d0d0d0;">
                    <div class="order_details_iner">
                        <h3>Order Details</h3>
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orderData.products.forEach((product)=>{ %>
                                   <% let productTotalPrice = product.price * product.quantity %> 
                                <tr>
                                    <th colspan="2"><span><%= product.productId.name %></span></th>
                                    <th><%= product.quantity %></th>
                                    <th><span>₹<%= productTotalPrice %></span></th>
                                </tr>
                                <% }) %>
                                <tr>
                                    <th colspan="3">Subtotal</th>
                                    <th><span>₹<%= orderData.totalPrice %></span></th>
                                </tr>
                                <tr>
                                    <th colspan="3">Shipping</th>
                                    <th><span>Flat Rate: ₹50</span></th>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th scope="col" colspan="3"></th>
                                    <th scope="col">Total ₹<%= orderData.amountPayable +50 %></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <br><br>
            <div class="col-lg-12">
                <a class="btn site-btn" href="/user/profile">Order View</a>
            </div>
        </div>
    </section>
    

    <%- include('../partials/userPartials/footer') -%>